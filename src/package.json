{
  "name": "token-management-service",
  "version": "1.0.0",
  "scripts": {
    "start": "NODE_ENV=production pm2 start config/pm2.config.js",
    "lint": "bash ./eslint.sh",
    "dev": "NODE_ENV=development pm2 start config/pm2.config.js",
    "test": "node ./test",
    "dev-task": "node ./tasks",
    "prd-task": "NODE_ENV=production node ./tasks",
    "exportTransactionsAsCsv": "mongoexport --db ethService --collection wallettransinfos --type=csv --fields address,eth,cre,trans --out walletTransactions.csv",
    "exportTransactionsAsJson": "mongoexport --db ethService --collection wallettransinfos --fields address,eth,cre,trans --out walletTransactions.json"
  },
  "dependencies": {
    "agenda": "^1.0.3",
    "apollo-server-koa": "^1.3.4",
    "async-task-manager": "^1.0.2",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bignumber.js": "^5.0.0",
    "ethereumjs-abi": "^0.6.5",
    "graphql": "^0.13.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-router": "^7.1.1",
    "koa-session": "^5.8.1",
    "koa-static": "^4.0.2",
    "koa2-cors": "^2.0.5",
    "mongoose": "^4.11.6",
    "node-schedule": "^1.2.5",
    "prompt-checkbox": "^2.2.0",
    "prompt-input": "^3.0.0",
    "properties-reader": "0.0.16",
    "request": "^2.83.0",
    "solc": "^0.4.19",
    "web3": "^1.0.0-beta.24"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^2.0.1"
  }
}
